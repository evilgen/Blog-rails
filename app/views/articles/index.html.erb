<h2>List of articles</h2>
<% @articles.each do |art| %>
	<p>
		<h3>
			<%= art.title %>
		</h3>
		<br />
			<%= art.text %>
		<br />
		<br />
		Автор: <%= art.username %> Создан: <%= art.created_at %>
		<%= link_to 'Show', article_path(art) %> 
		<% if user_signed_in? && art.username == current_user.username %>
			|
			<%= link_to 'Edit', edit_article_path(art) %> |
			<%= link_to 'Destroy', art, method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
	</p>
	<hr />
<% end %>

