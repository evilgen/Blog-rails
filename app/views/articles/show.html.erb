<h1><%= @article.title %></h1>
<p>
	<%= @article.text %>
</p>
<br />
<p>
	Автор: <%= @article.username %> Создан: <%= @article.created_at %>
</p>
<h2> Add comments </h2>
<p>
	<%= form_for([@article, @article.comments.build]) do |f| %>
		<p>
			<%= f.label :body %><br />
			<%= f.text_area :body %>
		</p>
		<p>
			<%= f.submit 'Send comment'%>
	</p>
	<% end %>
	</p>
<h2> Comments </h2>
<hr />
<p>
	<% @article.comments.each do |art| %>
		<h4>
			<%= art.autor %>
		</h4>
		<p>
			<%= art.body %>
		</p>
		<p>
			<%= art.created_at %>
		</p>
		<hr />
	<% end %>
</p>